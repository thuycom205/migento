<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <head>
            <css src="Xseed_SizeChart::css/sizechart.css"/>
        </head>

        <referenceBlock name="product.info.details">
            <block class="Xseed\SizeChart\Block\SizeChartTab" name="xseed.sizechart.tab" template="Xseed_SizeChart::sizechart/tab.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Size Chart</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
